doctype
html

    head
        title= package.title || 'Default Website Name'

        meta(charset='utf-8')
        meta(name='viewport', content='initial-scale=1.0, user-scalable=no, maximum-scale=1, width=device-width')

        //- prevent indexing
        meta(name='robots', content='noindex')

        //- css
        link(href='/css/main.min.css'+package.version_src, rel='stylesheet')

        //- favicon
        link(rel='shortcut icon', href='favicon', type='image/x-icon')
        link(rel='shortcut icon', href='favicon.ico')
        link(rel='icon', sizes='16x16 32x32 64x64', href='/favicon.ico')
        link(rel='icon', type='image/png', sizes='196x196', href='/img/favicon/favicon-192.png'+package.version_src)
        link(rel='icon', type='image/png', sizes='160x160', href='/img/favicon/favicon-160.png'+package.version_src)
        link(rel='icon', type='image/png', sizes='96x96', href='/img/favicon/favicon-96.png'+package.version_src)
        link(rel='icon', type='image/png', sizes='64x64', href='/img/favicon/favicon-64.png'+package.version_src)
        link(rel='icon', type='image/png', sizes='32x32', href='/img/favicon/favicon-32.png'+package.version_src)
        link(rel='icon', type='image/png', sizes='16x16', href='/img/favicon/favicon-16.png'+package.version_src)
        link(rel='apple-touch-icon', href='/img/favicon/favicon-57.png'+package.version_src)
        link(rel='apple-touch-icon', sizes='114x114', href='/img/favicon/favicon-114.png'+package.version_src)
        link(rel='apple-touch-icon', sizes='72x72', href='/img/favicon/favicon-72.png'+package.version_src)
        link(rel='apple-touch-icon', sizes='144x144', href='/img/favicon/favicon-144.png'+package.version_src)
