        link(rel='apple-touch-icon', sizes='152x152', href='/img/favicon/favicon-152.png'+package.version_src)
        link(rel='apple-touch-icon', sizes='180x180', href='/img/favicon/favicon-180.png'+package.version_src)

        meta(name='msapplication-TileColor', content='#FFFFFF')
        meta(name='msapplication-TileImage', content='/img/favicon/favicon-144.png'+package.version_src)
        meta(name='msapplication-config', content='/browserconfig.xml')

